@import '../common'
	.hero 
		background-color #dcdcdc
		padding 3rem
		font-size 1.35em
		height 42em
		opacity 0.9

	.content 
		color #0E4362

	.years-form 
		text-align center
		margin-top 1.5em
		color #0E4362

	.year-value 
		padding 0 0.5em

	.button 
		border 2px solid blue
		background-color white
		font-weight bold
		width 50%
		margin 0 auto
		text-align center
		margin-top 2em
		padding 0.75em
		border-radius 10%
	
	.button a 
		color black
		font-size 1.4em
	
	.button:hover 
		cursor pointer

@media screen and (min-width:26em)
	.hero 
		font-size 1.6em

@media screen and (min-width:37em)
	.hero 
		font-size 1.85em

@media screen and (min-width:56em)
	.hero
		font-size 2em